                trustStore="puppet.ts" trustStorePassword="7F3cYLVvuNHr0RKBtrt9iTKb0CM1d2tImjUNfauq"
                keyStore="mcollective-servers.ks" keyStorePassword="PyHCQCsSTWnX20s56oSXSJmARQbIsEa7HKtc1vsS"/>
        </sslContext>

        <systemUsage>
            <systemUsage>
                <memoryUsage>
                    <memoryUsage limit="20 mb"/>
                </memoryUsage>
                <storeUsage>
                    <storeUsage limit="1 gb" name="foo"/>
                </storeUsage>
                <tempUsage>
                    <tempUsage limit="100 mb"/>
                </tempUsage>
            </systemUsage>
        </systemUsage>

        <transportConnectors>
            <transportConnector name="stompssl" uri="stomp+ssl://0.0.0.0:6163?needClientAuth=true"/>
        </transportConnectors>
    </broker>

</beans>


